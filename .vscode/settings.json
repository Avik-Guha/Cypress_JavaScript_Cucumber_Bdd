{
	// "cucumberautocomplete.steps": ["cypress/integration/common/*/*.js"],
	"cucumberautocomplete.steps": ["cypress/integration/common/steps/*.js"],
	"cucumberautocomplete.syncfeatures": "cypress/integration/features/*.feature",
	"cucumberautocomplete.strictGherkinCompletion": true,
	"cucumberautocomplete.smartSnippets": true,
	"cucumberautocomplete.stepsInvariants": true,
	"cucumberautocomplete.onTypeFormat": true,
	"editor.quickSuggestions": {
		"comments": false,
		"strings": true,
		"other": true
	},
	"cucumberautocomplete.gherkinDefinitionPart": "(Given|When|Then|And)\\(",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true
}
